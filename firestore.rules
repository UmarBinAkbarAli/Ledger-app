rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // ============================================
    // USERS COLLECTION
    // ============================================
    match /users/{userId} {
      // Users can read their own document
      allow read: if isOwner(userId);
      
      // Users can create their own document on signup
      allow create: if isOwner(userId);
      
      // Users can update their own document (but not change role unless admin)
      allow update: if isOwner(userId) && 
                      (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']) || isAdmin());
      
      // Only admins can delete users
      allow delete: if isAdmin();
      
      // Bank accounts subcollection
      match /bankAccounts/{accountId} {
        allow read, write: if isOwner(userId);
      }
      
      // Summary subcollection (for dashboard aggregations)
      match /summary/{summaryId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // ============================================
    // CUSTOMERS COLLECTION
    // ============================================
    match /customers/{customerId} {
      allow read, write: if isAuthenticated() && 
                          resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // SUPPLIERS COLLECTION
    // ============================================
    match /suppliers/{supplierId} {
      allow read, write: if isAuthenticated() && 
                          resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // SALES COLLECTION
    // ============================================
    match /sales/{saleId} {
      allow read, write: if isAuthenticated() && 
                          resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // PURCHASES COLLECTION
    // ============================================
    match /purchases/{purchaseId} {
      allow read, write: if isAuthenticated() && 
                          resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // INCOME COLLECTION
    // ============================================
    match /income/{incomeId} {
      allow read, write: if isAuthenticated() && 
                          resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // EXPENSES COLLECTION
    // ============================================
    match /expenses/{expenseId} {
      allow read, write: if isAuthenticated() && 
                          resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // OPERATIONAL EXPENSES COLLECTION
    // ============================================
    match /operationalExpenses/{expenseId} {
      allow read, write: if isAuthenticated() && 
                          resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // TRANSFERS COLLECTION
    // ============================================
    match /transfers/{transferId} {
      allow read, write: if isAuthenticated() && 
                          resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // EXPENSE CATEGORIES COLLECTION
    // ============================================
    match /expenseCategories/{categoryId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

